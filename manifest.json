{
  "name": "Whatsaid - What is Said",
  "description": "Transribe any speechs that produced by website, show the transcripts as a subtitle",
  "version": "1",
  "manifest_version": 2,
  "author": "Agustinus Yohannes",
  "icons": {
    "16": "icon/favicon-16x16.png",
    "120": "icon/icon-120x120.png"
  },
  "browser_action": {
    "default_icon": "icon/favicon-16x16.png",
    "default_popup": "popup.html",
    "default_title": "Open Whatsaid - What is Said"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contents.js"]
    }
  ],
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "storage"
  ]
}
